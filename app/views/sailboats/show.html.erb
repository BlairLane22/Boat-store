<% content_for :body_class, 'bg-light' %>

<section class="section sailboat-show">
  <div class="columns">
    <div class="column is-8">
      <h1 class="title is-2"><%= @sailboat.title %></h1>

      <ul class="pv1">
        <% if @sailboat.brand? %>
        <li class="inline-block pr3"><%= @sailboat.brand %></li>
        <% end %>

        <li class="inline-block pr3"><%= @sailboat.model %></li>

        <% if @sailboat.condition? %>
        <li class="inline-block pr3"><%= @sailboat.condition %></li>
        <% end %>
      </ul>

      <div class="feature-image">
        <%= image_tag(@sailboat.image_url(:default)) %>
      </div>

      <div class="content pa4 mt3 bg-white border-radius-3">

      <h3 class="subtitle is-4">Description</h3>
      <%= @sailboat.description %>


      <h3 class="subtitle is-4 pt5">Product Specs</h3>

      <table class="table is-narrow">
        <% if @sailboat.condition %>
        <tr>
          <td class="has-text-weight-bold">Condition:</td>
          <td><%= @sailboat.condition %></td>
        </tr>
        <% end %>

        <% if @sailboat.finish %>
          <tr>
            <td class="has-text-weight-bold">Finish:</td>
            <td><%= @sailboat.finish %></td>
          </tr>
        <% end %>

        <% if @sailboat.length %>
          <tr>
            <td class="has-text-weight-bold">Length:</td>
            <td><%= @sailboat.length %></td>
          </tr>
        <% end %>

        <tr>
          <td class="has-text-weight-bold">Model:</td>
          <td><%= @sailboat.model %></td>
        </tr>
      </table>
    </div>
    </div>
    <div class="column is-3 is-offset-1">
      <div class="bg-white pa4 border-radius-3">
        <h4 class="title is-5 has-text-centered"><%= number_to_currency(@sailboat.price) %></h4>
        <p class="has-text-centered mb4">Sold by <%= @sailboat.user.name %></p>
        <%= button_to 'Add to cart', line_items_path(sailboat_id: @sailboat), class: 'button is-warning add-to-cart' %>
      </div>
    </div>
  </div>

  <% if sailboat_author(@sailboat) %>
    <%= link_to 'Edit', edit_sailboat_path(@sailboat), class: 'button' %>
  <% end %>
</section>
