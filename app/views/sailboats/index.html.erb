<% count = 0 %>

<div class="sailboat-index-grid pt4">
  <% @sailboats.each do |sailboat| %>

    <% count += 1 %>

      <div class="sailboat border-light" style="margin-bottom: 12%; margin-right: 3%;">
        <div class="sailboat-thumb">
          <% if sailboat.image? %>
            <%= link_to image_tag(sailboat.image_url(:thumb)), sailboat %>
            <% if sailboat.condition? %>
              <div class="condition">
                <span class="tag is-dark"><%= sailboat.condition %></span>
              </div>
            <% end %>
          <% else %>
            <p>Product has not image, sorry.</p>
          <% end %>
        </div>


      <div class="pa3">

        <h3 class="fw7 f4 title"><%= link_to sailboat.title.capitalize, sailboat %></h3>

        <p class="has-text-gray fg pt1">Sold by <%= sailboat.user.name.capitalize %></p>
        <% if sailboat.category %>
          <p class="has-text-gray fg pt1">Category: <%= sailboat.category.capitalize %></p>
        <% end %>

        <p class="f3 fw6 has-text-right pt2 price"><%= number_to_currency(sailboat.price) %></p>

        <% if user_signed_in? && current_user.id == sailboat.user_id %>
           <%= link_to 'Edit', edit_sailboat_path(sailboat), class: "button is-small" %>
           <%= link_to 'Delete', sailboat, method: :delete, data: { confirm: "Are you sure you want to delete #{sailboat.title.capitalize}?" }, class: "button is-small" %>
        <% end %>

      </div>
    </div>
  <% end %>
</div>

<% if count == 0 %>
  <p>No boats are saved to the database. Be the first!!!</p>
<% end %>
